
Criando a tabela jogador
CREAT TABLE JOGADOR
(
ID_JOGADOR NUMBER(100) NOT NULL,
NOME VARCHAR2(100)NOT NULL,
POSICAO VARCHAR2(100)NOT NULL,
BI VARCHAR2(100)NOT NULL,
CONSTRAINT PK_JOGADOR PRIMARY KEY (ID_JOGADOR)
);

CREAT TABLE CONTRATADO
(
ID_JOGADOR NUMBER(10,0) NOT NULL,
DATA_INICIO DATE NOT NULL,
DATA_FIM DATE NOT NULL,
CONSTRAINT PK_CONTRATADO PRIMARY KEY(ID_JOGADOR,DATA_INICIO),
CONSTRAINT FK_CONTRATADO REF_JOGADOR FOREIGN KEY(ID_JOGADOR),
REFERENCE JOGADOR(ID_JOGADOR),
CONSTRAINT CK_CONTRATADO CHECK(DATA_FIM > DATA_INICIO)
);

// Adicionando na tabela jogador a coluna apelido
ALTER TABLE JOGADOR ADD APELIDO VARCHAR2(30);

// Retirando da tabela jogador a coluna BI , primeiro removendo a CONSTRAINT para depois removedor
ALTER TABLE DROP COLUMN BI CASCADE CONSTRAINT;
DROP TABLE JOGADOR;

// Desabilitando a chave
ALTER TABLE CONTRATADO
DISABLE CONSTRAINT FK_CONTRATADO REF_JOGADOR;

//Habilitando a chave
ALTER TABLE CONTRATADO
ENABLE CONSTRAINT FK_CONTRATADO REF_JOGADOR;


